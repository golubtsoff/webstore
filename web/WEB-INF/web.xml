<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>ErrorFilter</filter-name>
        <filter-class>web.filter.ErrorFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LogoutFilter</filter-name>
        <filter-class>web.filter.LogoutFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SignInFilter</filter-name>
        <filter-class>web.filter.SignInFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SignUpFilter</filter-name>
        <filter-class>web.filter.SignUpFilter</filter-class>
    </filter>
    <filter>
        <filter-name>PurchasesFilter</filter-name>
        <filter-class>web.filter.PurchasesFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoggingFilter</filter-name>
        <filter-class>web.filter.LoggingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ErrorFilter</filter-name>
        <url-pattern>/error</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LogoutFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SignInFilter</filter-name>
        <url-pattern>/signin</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SignUpFilter</filter-name>
        <url-pattern>/signup</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>PurchasesFilter</filter-name>
        <url-pattern>/purchases</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoggingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>SignInServlet</servlet-name>
        <servlet-class>web.SignInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>web.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemServlet</servlet-name>
        <servlet-class>web.ItemServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchaseServlet</servlet-name>
        <servlet-class>web.PurchaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemServlet</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchaseServlet</servlet-name>
        <url-pattern>/purchases</url-pattern>
    </servlet-mapping>

</web-app>